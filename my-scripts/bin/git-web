#! /usr/bin/env bash

SCRIPTNAME=$(basename $0)

git rev-parse --git-dir > /dev/null 2>&1
if [[ $? != 0 ]]; then
    echo "${SCRIPTNAME}: couldn't find a git repo"
    exit 1
fi

REMOTE_ORIGIN_URL=$(git config --get remote.origin.url)
REPO_PATH=$(git rev-parse --show-toplevel)

if [[ $REMOTE_ORIGIN_URL =~ "@gitlab" ]]; then
    PLATFORM="gitlab"
elif [[ $REMOTE_ORIGIN_URL =~ "@github" ]]; then
    PLATFORM="github"
else
    echo "${SCRIPTNAME}: couldn't parse platform from remote origin ${REMOTE_ORIGIN_URL}"
    exit 1
fi

if [[ $REMOTE_ORIGIN_URL =~ http* ]]; then
    HTTP_SED_FILTER="s/^\(.*\)\.git$/\1/p"
    
    PLATFORM_URL=$(echo "${REMOTE_ORIGIN_URL}" | sed -n "${HTTP_SED_FILTER}")
else
    # https://stackoverflow.com/a/36798723/1107844
    SSH_SED_FILTER="s/^.*:\(.*\)\.git$/\1/p"
    
    URL_FRAGMENT=$(echo "${REMOTE_ORIGIN_URL}" | sed -n "${SSH_SED_FILTER}")

    if [[ $PLATFORM = "gitlab" ]]; then
        PREFIX="https://gitlab.com"
    elif [[ $PLATFORM = "github" ]]; then
        PREFIX="https://github.com"
    else
        # should be impossible ¯\_(ツ)_/¯
        exit 1
    fi

    PLATFORM_URL="${PREFIX}/${URL_FRAGMENT}"
fi

_browse() {
    BRANCH=$(git branch --show-current)

    # https://stackoverflow.com/questions/16623835/remove-a-fixed-prefix-suffix-from-a-string-in-bash
    RELATIVE_PATH=${PWD#"$REPO_PATH"}

    if [[ $PWD == $REPO_PATH && -z "${1}" ]]; then
        TARGET="${PLATFORM_URL}"
    else
        if [[ $PLATFORM = "gitlab" ]]; then
            TARGET="${PLATFORM_URL}/-/tree/${BRANCH}${RELATIVE_PATH}/${1}"
        elif [[ $PLATFORM = "github" ]]; then
            TARGET="${PLATFORM_URL}/tree/${BRANCH}${RELATIVE_PATH}/${1}"
        else
            # ¯\_(ツ)_/¯
            TARGET="${PLATFORM_URL}/tree/${BRANCH}${RELATIVE_PATH}/${1}"
        fi
    fi

    xdg-open $TARGET
}

_pipe() {
    xdg-open "${PLATFORM_URL}/pipelines/latest"
}

_pipes() {
    xdg-open "${PLATFORM_URL}/pipelines"
}

_commits() {
    xdg-open "${PLATFORM_URL}/commits"
}

_mrs() {
    xdg-open "${PLATFORM_URL}/merge_requests"
}

_root() {
    # you can't cd from a bash script unless you source the file
    # so to run this one you need to source the script, e.g. `. git-web root`
    cd "${REPO_PATH}"
}

_url() {
    echo "${PLATFORM_URL}"
}

if [[ $1 =~ ^(browse|pipe|pipes|commits|mrs|root|url)$ ]]; then
    COMMAND=_$1
    shift
    $COMMAND "$@"
else
    echo "Usage: ${SCRIPTNAME} [browse|pipe|pipes|commits|mrs|root|url]"
fi
